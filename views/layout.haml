!!! Strict
%html{ html_attrs("en") }
  %head
    %title Francesco Canessa - web development and more!
    %link{ href: "/css/main.css", rel: "stylesheet" }
    %meta{ charset: "utf-8" }
    %meta{ :"http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
    %meta{ name: "description", content: "Hello! I'm Francesco Canessa, a software developer specialized in web development. Contact me, I like software, open source and beer!" }
    %meta{ name: "keywords", content: "francesco, canessa, web, developer, software, ruby, rails, ios" }
    %meta{ name: "author", content: "" }
    %link{ rel: "profile", href: "http://microformats.org/profile/hcard" }
    -# %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %script{ src: "/js/modernizr.js", type: "text/javascript" }
  %body{ class: body_class }
    #wrap
      #container
        %header
          %h1
            - link_to "Francesco Canessa", "/"
            %span web development and more!
        %nav
        #content
          = yield
        %footer
    %script{ src: "/js/jquery.js", type: "text/javascript" }
    %script{ src: "/js/main.js", type: "text/javascript" }
